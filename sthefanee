  <script>
    function generatePrompt() {
      const goal = document.getElementById("goal").value.trim();
      let role = document.getElementById("role").value;
      const customRole = document.getElementById("customRole").value.trim();
      const tone = document.getElementById("tone").value;
      const format = document.getElementById("format").value;
      if (role === "custom" && customRole) role = customRole;

      if (!goal) {
        alert("Please enter your goal or topic.");
        return;
      }

      const prompt = `Act as a ${role}. Your task is to ${goal}. 
Write the response in a ${tone} tone and present it as a ${format}. 
Include clear structure, actionable insights, and creativity.`;

      const tip = `üí° Tip: Add more context (target audience, timeframe, or platform) for even better results.`;

      document.getElementById("finalPrompt").textContent = prompt;
      document.getElementById("promptTip").textContent = tip;
      document.getElementById("output").style.display = "block";
    }

    function copyPrompt() {
      const text = document.getElementById("finalPrompt").textContent;
      navigator.clipboard.writeText(text);
      const btn = document.querySelector(".copy-btn");
      btn.textContent = "Copied!";
      setTimeout(() => (btn.textContent = "Copy"), 1500);
    }
  </script>
